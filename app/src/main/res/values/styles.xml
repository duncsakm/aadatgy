<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.Modern" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_modern</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button.Dark" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Button.Warehouse" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_warehouse</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme_App_ModernLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/modern_primary</item>
        <item name="colorPrimaryDark">@color/modern_primary_dark</item>
        <item name="colorAccent">@color/modern_accent</item>
        <item name="android:windowBackground">@color/modern_background</item>
        <item name="android:textColorPrimary">@color/modern_text</item>
        <item name="android:textColor">@color/modern_text</item>
        <item name="buttonStyle">@style/Widget.App.Button.Modern</item>
    </style>

    <style name="Theme_App_DarkIndustrial" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:textColorSecondary">@color/dark_text</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:editTextColor">@color/dark_text</item>
        <item name="android:textColorHint">@color/dark_text</item>
        <item name="buttonStyle">@style/Widget.App.Button.Dark</item>
    </style>

    <style name="Theme_App_Warehouse" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/wh_primary</item>
        <item name="colorPrimaryDark">@color/wh_primary_dark</item>
        <item name="colorAccent">@color/wh_accent</item>
        <item name="android:windowBackground">@color/wh_background</item>
        <item name="android:textColorPrimary">@color/wh_text</item>
        <item name="android:textColor">@color/wh_text</item>
        <item name="buttonStyle">@style/Widget.App.Button.Warehouse</item>
    </style>

</resources>
